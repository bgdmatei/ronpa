<% case @topic.level.to_i %>
  <% when 1 %>
    <p class="rating-background-yellow">Beginner</p>
    <% 1.times do %>
      <i class="fas fa-circle" style="color: #9DEDAA"></i>
    <% end %>
    <% 4.times do %>
      <i class="fas fa-circle" style="color: #CACACA"></i>
    <% end %>
  <% when 2 %>
    <p class="rating-background-yellow">Beginner</p>
    <% 2.times do %>
      <i class="fas fa-circle" style="color: #9DEDAA"></i>
    <% end %>
    <% 3.times do %>
      <i class="fas fa-circle" style="color: #CACACA"></i>
    <% end %>
  <% when 3 %>
    <p class="rating-background-orange">Intermediate</p> 
    <% 3.times do %>
      <i class="fas fa-circle" style="color: #9DEDAA"></i>
    <% end %>
    <% 2.times do %>
      <i class="fas fa-circle" style="color: #CACACA"></i>
    <% end %>
  <% when 4 %>
    <p class="rating-background-orange">Intermediate</p> 
    <% 4.times do %>
      <i class="fas fa-circle" style="color: #9DEDAA"></i>
    <% end %>
    <% 1.times do %>
      <i class="fas fa-circle" style="color: #CACACA"></i>
    <% end %>
  <% when 5 %>
    <p class="rating-background-red">Professional</p> 
    <% 5.times do %>
      <i class="fas fa-circle" style="color: #9DEDAA"></i>
    <% end %>
<% end %>
