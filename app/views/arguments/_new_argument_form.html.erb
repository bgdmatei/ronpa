<%= simple_form_for [@topic, argument], wrapper: :inline_form, html: { class: 'form-inline m-3 justify-content-center' } do |f| %>
  <%= f.input :content, label: 'Write your argument here!' %>
  <%= f.input :side, as: :hidden, input_html: { value: side }%>
  <%= f.button :button, class: "btn btn-primary" do %>
    <i class="fas fa-pencil-alt"></i>
  <% end %>
<% end %>
