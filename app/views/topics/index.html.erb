<div class="container pb-5">
  <h1 class="text-center mb-5" id = "topic-index-header"> Browse Topics</h1>
  <div class="mb-5">
    <%= form_tag topics_path, method: :get, class: "search-form d-flex ml-3 mt-3" do %>
    <%= text_field_tag :query,
    params[:query],
    class: "form-control mr-2",
      placeholder: "Search a topic or category"
      %>
      <%= button_tag(type: "submit", class: "btn btn-default") do %>
      <i class="fas fa-search"></i>
      <% end %>
      <% end %>
    </div>
    <div class="topic-card-container">

      <% @topics.each do |topic| %>
      <%= render 'topic_card', topic: topic %>
      <% end %>
    </div>
  </div>



