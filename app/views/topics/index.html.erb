<div class="container">
    <div class="d-flex justify-content-between">
      <div>
        <%= form_tag topics_path, method: :get, class: "search-form d-flex ml-3 mt-3" do %>
          <%= text_field_tag :query,
          params[:query],
          class: "form-control mr-2",
          placeholder: "Search a topic or category"
          %>
          <%= submit_tag "Search", class: "btn btn-default" %>
        <% end %>
      </div>
      <div class="mr-3 mt-3">
        <%= link_to "Dashboard", dashboard_path, class:"btn btn-default" %>
      </div>
    </div>
      <h1 class="text-center mb-5">Debate Topics</h1>
  <div class="topic-card-container">
    <% @topics.each do |topic| %>
        <%= render 'topic_card', topic: topic %>
    <% end %>
  </div>
</div>



