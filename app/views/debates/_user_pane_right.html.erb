<div id="argument-uses-right">
  <% @debate.participants.negative.first.user.arguments.negative.where(topic: @debate.topic).each do |argument| %>
    <div class="flip-card">
      <div class="card__face card__face--front">front</div>
      <div class="card__face card__face--back argument-use-negative"><%= argument.content %> </div>
    </div>
  <% end %>
</div>

