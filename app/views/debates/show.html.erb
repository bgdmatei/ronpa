<div class="container pl-0 pr-0">
  <h1 class="text-center"><%= @debate.topic.proposition%></h1>
  <h3 class="text-center text-phase"><p>You are in the <span style="color: red;"><%= @debate.phase %></span> phase!</p></h3>
  <h4 class="text-center text-clock"><i class="fas fa-stopwatch fa-2x"></i></h4>
  <div class="d-flex justify-content-between">
    <% @debate.participants.each do |participant| %>
        <% if participant.role == "affirmative" %>
          <div class="user-pane-left pt-2">
            <%= render 'user_pane_left', participant: participant %>
          </div>
        <% elsif participant.role == "negative" %>
          <div class="user-pane-right pt-2">
            <%= render 'user_pane_right', participant: participant %>
          </div>
        <% end %>
    <% end %>
  </div>
  <div>
    <% @debate.participants.each do |participant| %>
      <% if participant.role == "moderator" %>
         <div class="text-center text-moderator">
         <div class="text-center moderator-image">
           <%= cl_image_tag participant.user.photo %>
         </div>
         <p><%= participant.user.username %> is <%= participant.role %></p>
         <%= link_to "Progress Phase", debate_next_phase_path(@debate), class: "btn btn-primary",
            method: :patch %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>

<%= render 'shared/timer' %>