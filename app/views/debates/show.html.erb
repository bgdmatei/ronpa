<div class="container pl-0 pr-0">
  <h1 class="text-center topic-proposition-text"><%= @debate.topic.proposition%></h1>
  <h3 class="text-center text-phase">
    <% case @debate.phase %>
    <% when "waiting_start"%>
      Waiting for match to start...
    <% when "count_in"%>
      Affirmative opening arguments will start in:
    <% when "affirmative_speech"%>
      Affirmative opening arguments
    <% when "negative_cross_examination_preparation"%>
      Negative cross examination preparation
    <% when "negative_cross_examination"%>
      Negative cross examination
    <% when "negative_speech_preparation"%>
      Negative opening argument preparation
    <% when "negative_speech"%>
      Negative opening arguments
    <% when "affirmative_cross_examination_preparation"%>
      Affirmative cross examination preparation
    <% when "affirmative_cross_examination"%>
      Affirmative cross examination
    <% when "affirmative_closing_statement_preparation"%>
      Affirmative closing statement prepatation
    <% when "affirmative_closing_statement"%>
      Affirmative closing statements
    <% when "negative_closing_statement_preparation"%>
      Negative closing statement preparation
    <% when "negative_closing_statement"%>
      Negative closing statements
    <% when "waiting_end"%>
      Moderator giving final score...
    <% end %>
  </h3>
  <h4 class="text-center text-clock"><%= render 'shared/timer' %></h4>
  <div class="d-flex justify-content-between">
    <% @debate.participants.each do |participant| %>
        <% if participant.affirmative? %>
          <div class="user-pane-left pt-2">
            <%= render 'user_pane_left', participant: participant %>
          </div>
          <%= link_to "Progress Phase", debate_next_phase_path(@debate), class: "btn btn-primary next-phase d-none",
          method: :patch %>
        <% elsif participant.negative? %>
          <div class="user-pane-right pt-2">
            <%= render 'user_pane_right', participant: participant %>
          </div>
          <%= link_to "Progress Phase", debate_next_phase_path(@debate), class: "btn btn-primary next-phase d-none",
          method: :patch %>
        <% end %>
    <% end %>
  </div>
  <div>
    <div class="text-center text-moderator">
      <div>
        <%= cl_image_tag current_user.photo, class:"text-center moderator-image" %>
      </div>
      <% if @debate.participants.moderator.any? %>
        <h4><%= @debate.participants.moderator.first.user.username %> is Moderator</h4>
        <% if current_user.participants.where(debate_id: @debate).first.moderator? %>
          <%= link_to "Progress Phase", debate_next_phase_path(@debate), class: "btn-new next-phase",
            method: :patch %>
          <% if @debate.waiting_end? %>
            <%= link_to "Affirmative Wins", debate_set_result_path(@debate, winner_id: @debate.participants.affirmative.first), method: :patch, class: "btn-new"  %>
            <%= link_to "Negative Wins", debate_set_result_path(@debate, winner_id: @debate.participants.negative.first), method: :patch, class: "btn-new"  %>
          <% end %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>

<div class="container">
  <h1>my shit here!!!</h1>
  <%= render 'debates/winner_results' %>

  <%= render 'debates/loser_results' %>
</div>
