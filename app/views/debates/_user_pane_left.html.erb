<h3 class="role">Affirmative position</h3>
<div class="user-icon-left text-left d-flex justify-content-start">
  <div class="mr-2">
    <%= cl_image_tag participant.user.photo, class:"affirmative-image" %>
  </div>
  <div>
    <h4><%= participant.user.username %></h4>
  </div>
</div>
<div id="argument-uses-left">
  <% @debate.participants.affirmative.first.user.arguments.affirmative.where(topic: @debate.topic).each do |argument| %>
    <div class="argument-use-affirmative d-flex"><h5><%= argument.content %></h5> </div>
  <% end %>
</div>
