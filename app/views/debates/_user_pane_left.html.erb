<div id="argument-uses-left">
  <% @debate.participants.affirmative.first.user.arguments.affirmative.where(topic: @debate.topic).each do |argument| %>
      <div class="flip-card">
        <div class="card__face card__face--front">front</div>
        <div class="card__face card__face--back argument-use-affirmative"><%= argument.content %> </div>
      </div>
  <% end %>
</div>


