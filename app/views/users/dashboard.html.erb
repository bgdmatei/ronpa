<%= render 'shared/navbar' %>
<div class="container-dash justify-content-between" >
  <div class="username">
    <h4><%= current_user.username %>'s Dashboard</h4>
  </div>
  <div class="user-sidebar">
    <div class="sidebar">
      <div class="actions">
        <ul>
          <li><%= cl_image_tag current_user.photo, class: "dashboard-image"%> </li>
          <li><%= current_user.email %></li>
          <li> Wins: <i class="fas fa-trophy"></i> <%=  @user.wins %> </li>
          <li> Losses: <i class="fas fa-skull"></i> <%=  @user.losses %> </li>
        </ul>
        <hr>
      </div>
    </div>
   <div class="container d-flex">
        <div class="col-sm-6 ">
          <div class="dashboard-header"><h5>Open Debates</h5></div>
            <div class="open-debates">
              <% @topics.each do  |topic| %>
                <%= render 'topics/topic_card', topic: topic %>
              <% end %>
              <%= link_to "See all", topics_path, class: "btn btn-primary"  %>
            </div>
        </div>
        <div class="col-sm-6 ">
          <div class="dashboard-header"><h5>Moderate</h5></div>
            <div class="open-debates">
              <% @topics.each do  |topic| %>
                <%= render 'topics/topic_card', topic: topic %>
              <% end %>
            </div>
        </div>
  </div>
</div>


